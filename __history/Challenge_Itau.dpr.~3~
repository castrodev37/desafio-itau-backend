program Challenge_Itau;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  Horse,
  Challenge.Itau.Service.Transaction in 'src\service\Challenge.Itau.Service.Transaction.pas';

begin
  THorse.Get('/ping',
    procedure(Req: THorseRequest; Res: THorseResponse)
    begin
      Res.Send('pong');
    end);

  THorse.Listen(9000);
end.
