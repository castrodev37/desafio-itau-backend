unit Challenge.Itau.Controller.Transaction;

interface

procedure Registry;

implementation

uses
  System.SysUtils,
  System.JSON,
  Horse,
  Challenge.Itau.Service.Transaction;

procedure InsertTransaction(Req: THorseRequest; Res: THorseResponse; Next: TProc);
var
  LService: TChallengeItauServiceTransaction;
  LStatus: TJSONObject;
begin
  LStatus := TJSONObject.Create;
  try
    LService := TChallengeItauServiceTransaction.Create(LStatus);
    try
      LService.Insert(Req.Body<TJSONObject>);

      Res
        .Send<TJSONObject>(LStatus)
        .Status(THTTPSTatus.Created);
  finally

  end;
end;

procedure Registry;
begin
  THorse.Post('/transacao', InsertTransaction);
end;

initialization

finalization
  FStatus.Free;

end.
